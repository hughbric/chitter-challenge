  <link rel="stylesheet" type="text/css" href="/style.css">
  <h1 class="center">Chitter.</h1>  
</head>
<body>
  <hr>
  <% if @username == nil %>
    <a href='/sign_up' style="float: right;">Sign up</a>
  <% else %>
    <p style="float: right;">You are logged in as @<%= @username %></p>
    <br>
    <br>
    <br>
    <a href='/sign_up' style="float: right;">Sign out</a>
  <% end %>
  <form class="center" action="/new" method="post">
    <input type="text" name="peep" placeholder="What's on your mind?">
    <input type="submit" value="Cheep">
  </form>
  <hr>
  <% @peeps.each do |peep| %>
    <div class="box">
      <p class="name"><%= @username %></p>
      <p class="peep"><%= peep.peep %></p>
      <span class="timestamp"><%= peep.timestamp %></span>
    </div>
  <% end %>
</body>
</html>
